    <script>
        // Parse movies data from server
        const movies = <%- JSON.stringify(movies || []) %>;

        // ðŸ” DEBUG
        console.log('ðŸŽ¬ Total movies:', movies.length);
        console.log('ðŸŽ¬ Movies:', movies);

        // Get DOM elements
        const movieGrid = document.getElementById('movieGrid');
        const emptyState = document.getElementById('emptyState');
        const movieCount = document.getElementById('movieCount');
        const searchInput = document.getElementById('searchInput');
        let activeGenre = 'all';

        // Normalize poster path for display
        const normalizePoster = (poster) => {
            if (!poster) return '/assets/images/background/img4.jpg';
            const normalized = poster.replace(/\\/g, '/');
            if (normalized.startsWith('http') || normalized.startsWith('/')) return normalized;
            if (normalized.startsWith('uploads/')) return `/${normalized}`;
            return `/uploads/${normalized}`;
        };

        // Extract year from date
        const getYear = (dateValue) => {
            if (!dateValue) return 'N/A';
            const date = new Date(dateValue);
            return Number.isNaN(date.getTime()) ? 'N/A' : date.getFullYear();
        };

        // Format duration for display
        const formatDuration = (value) => {
            if (!value) return 'N/A';
            if (typeof value === 'string' && value.includes('h')) return value;
            const minutes = Number(value);
            if (Number.isNaN(minutes)) return 'N/A';
            return `${minutes} min`;
        };

        // Render movies to the grid
        const renderMovies = (list) => {
            console.log('ðŸŽ¬ renderMovies called with:', list ? list.length : 0, 'movies');

            if (!movieGrid) {
                console.error('âŒ movieGrid element not found!');
                return;
            }

            // Clear existing content (including loading placeholders)
            movieGrid.innerHTML = '';

            // Handle empty state
            if (!list || list.length === 0) {
                if (emptyState) emptyState.style.display = 'block';
                if (movieCount) movieCount.textContent = '0 Movies Found';
                console.log('ðŸ“­ No movies to display');
                return;
            }

            // Hide empty state and update count
            if (emptyState) emptyState.style.display = 'none';
            if (movieCount) movieCount.textContent = `${list.length} ${list.length === 1 ? 'Movie' : 'Movies'} Available`;

            // Render each movie card
            list.forEach((movie, index) => {
                console.log(`ðŸŽ¬ Rendering movie ${index + 1}: ${movie.movieTitle}`);

                const poster = normalizePoster(movie.poster);
                const releaseYear = getYear(movie.movieRelease);
                const ratingValue = movie.rating ? Number(movie.rating).toFixed(1) : 'N/A';
                const durationLabel = formatDuration(movie.movieDuration);
                const genreLabel = Array.isArray(movie.genre) ? movie.genre[0] : movie.genre;

                const card = document.createElement('a');
                card.className = 'movie-card';
                card.href = `/movie/${movie._id}`;
                card.innerHTML = `
                <div class="movie-poster-container">
                    <img src="${poster}" 
                         alt="${movie.movieTitle}" 
                         class="movie-poster" 
                         loading="lazy"
                         onerror="this.src='/assets/images/background/img4.jpg'">
                    <div class="movie-poster-overlay"></div>
                    <div class="play-button">
                        <i class="bi bi-play-fill"></i>
                    </div>
                    <div class="movie-badges">
                        <div class="movie-rating-badge">
                            <i class="bi bi-star-fill"></i>
                            ${ratingValue}
                        </div>
                        ${genreLabel ? `<div class="movie-genre-badge">${genreLabel}</div>` : ''}
                    </div>
                </div>
                <div class="movie-info">
                    <h3 class="movie-title">${movie.movieTitle}</h3>
                    <div class="movie-meta">
                        <span class="movie-year">
                            <i class="bi bi-calendar3"></i>
                            ${releaseYear}
                        </span>
                        <span class="movie-duration">
                            <i class="bi bi-clock"></i>
                            ${durationLabel}
                        </span>
                    </div>
                    <p class="movie-description">${movie.movieDescription || 'No synopsis available yet.'}</p>
                </div>
            `;
                movieGrid.appendChild(card);
            });

            console.log('âœ… Finished rendering', list.length, 'movies');
        };

        // Apply search and genre filters
        const applyFilters = () => {
            const keyword = (searchInput?.value || '').trim().toLowerCase();
            const filtered = movies.filter((movie) => {
                const titleMatch = (movie.movieTitle || '').toLowerCase().includes(keyword);
                const genreText = Array.isArray(movie.genre) ? movie.genre.join(' ') : movie.genre || '';
                const genreMatch = genreText.toLowerCase().includes(keyword);
                const yearMatch = String(getYear(movie.movieRelease)).includes(keyword);
                const passesSearch = keyword.length === 0 || titleMatch || genreMatch || yearMatch;
                const passesGenre = activeGenre === 'all' || genreText.toLowerCase().includes(activeGenre.toLowerCase());
                return passesSearch && passesGenre;
            });
            renderMovies(filtered);
        };

        // Set active filter tag style
        const setActiveTag = (tag) => {
            const buttons = document.querySelectorAll('.filter-tag');
            buttons.forEach((btn) => btn.classList.remove('active'));
            tag.classList.add('active');
        };

        // Filter movies by genre
        const filterByGenre = (genre) => {
