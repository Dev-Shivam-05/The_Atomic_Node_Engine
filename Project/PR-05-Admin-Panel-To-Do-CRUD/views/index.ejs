            const buttons = document.querySelectorAll('.filter-tag');
            const target = Array.from(buttons).find(
                (btn) => btn.textContent.toLowerCase().includes(genre.toLowerCase()) ||
                    (genre === 'all' && btn.textContent.includes('All'))
            );
            if (target) setActiveTag(target);
            applyFilters();
        };

