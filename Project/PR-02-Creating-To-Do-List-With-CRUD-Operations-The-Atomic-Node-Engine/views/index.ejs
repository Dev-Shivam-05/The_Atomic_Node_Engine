<!doctype html>
<html lang="en">

<head>
    <title>To Do List</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" aria-disabled="true">Disabled</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <section class="AddTaskToList">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <form class="my-5" method="post" action="/">
                            <h2 class="fw-bold my-3">Add Task To Todo List</h2>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput" required
                                    placeholder="name@example.com" name="taskName">
                                <label for="floatingInput">Task Name</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="time" class="form-control" id="floatingInput" required
                                    placeholder="name@example.com" name="taskTiming">
                                <label for="floatingInput">Enter Task Timing</label>
                            </div>
                            <button type="submit" class="btn btn-primary mt-4 btn-lg">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <section class="ViewTasks">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <table class="table table-dark table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-center">Sr No.</th>
                                    <th scope="col" class="text-center">Task Name</th>
                                    <th scope="col" class="text-center">Task Timing</th>
                                    <th scope="col" class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% todos.map((task,index)=> {
                                    const {taskName,taskTiming,taskId} = task;
                                    %>
                                    <tr>
                                        <td class="text-center">
                                            <%= index + 1 %>
                                        </td>
                                        <td class="text-center">
                                            <%= taskName %>
                                        </td>
                                        <td class="text-center">
                                            <%= taskTiming %>
                                        </td>
                                        <td class="text-center">
                                            <a href="/delete/task/<%= taskId %>" class="btn btn-danger">Delete Task</a>
                                            <a href="/edit/task/<%= taskId %>" class="btn btn-warning">Edit Task</a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <footer>
        <!-- place footer here -->
    </footer>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
</body>

</html>