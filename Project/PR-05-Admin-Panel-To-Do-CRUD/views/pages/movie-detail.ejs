<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= movie ? movie.movieTitle : "Movie Detail" %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Playfair+Display:wght@400;500;600;700&display=swap');

    :root {
      --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
      --accent-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
      --dark-bg: #0a0a1a;
      --card-bg: rgba(20, 20, 40, 0.85);
      --card-bg-hover: rgba(30, 30, 60, 0.95);
      --text-primary: #ffffff;
      --text-secondary: #a0a0c0;
      --text-muted: #6b6b8d;
      --accent-purple: #8b5cf6;
      --accent-pink: #ec4899;
      --accent-blue: #3b82f6;
      --glow-purple: rgba(139, 92, 246, 0.5);
      --border-subtle: rgba(255, 255, 255, 0.1);
      --shadow-soft: 0 20px 60px rgba(0, 0, 0, 0.4);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: var(--dark-bg);
      color: var(--text-primary);
      min-height: 100vh;
    }

    .ambient-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      overflow: hidden;
    }

    .ambient-orb {
      position: absolute;
      border-radius: 50%;
      filter: blur(80px);
      opacity: 0.3;
      animation: float 20s ease-in-out infinite;
    }

    .orb-1 {
      width: 500px;
      height: 500px;
      background: var(--accent-purple);
      top: -200px;
      right: -200px;
      animation-delay: 0s;
    }

    .orb-2 {
      width: 400px;
      height: 400px;
      background: var(--accent-pink);
      bottom: -150px;
      left: -150px;
      animation-delay: -5s;
    }

    .orb-3 {
      width: 300px;
      height: 300px;
      background: var(--accent-blue);
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      animation-delay: -10s;
    }

    @keyframes float {
      0%, 100% { transform: translate(0, 0) scale(1); }
      25% { transform: translate(30px, -30px) scale(1.1); }
      50% { transform: translate(-20px, 20px) scale(0.95); }
      75% { transform: translate(-30px, -20px) scale(1.05); }
    }

    .top-bar {
      padding: 1.5rem 0;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--text-primary);
      text-decoration: none;
      font-weight: 600;
      background: var(--card-bg);
      padding: 0.75rem 1.5rem;
      border-radius: 12px;
      border: 1px solid var(--border-subtle);
      transition: all 0.3s ease;
    }

    .back-link:hover {
      background: var(--primary-gradient);
      border-color: transparent;
      box-shadow: 0 8px 30px var(--glow-purple);
      transform: translateX(-4px);
    }

    .detail-shell {
      background: var(--card-bg);
      border-radius: 24px;
      overflow: hidden;
      border: 1px solid var(--border-subtle);
      box-shadow: var(--shadow-soft);
      margin-bottom: 3rem;
    }

    .detail-hero {
      position: relative;
      height: 420px;
      background-size: cover;
      background-position: center;
    }

    .detail-hero::after {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(180deg, rgba(10, 10, 26, 0.2) 0%, rgba(10, 10, 26, 0.95) 100%);
    }

    .detail-content {
      padding: 2.5rem;
    }

    .poster-frame {
      margin-top: -160px;
      position: relative;
    }

    .poster-frame img {
      width: 100%;
      border-radius: 18px;
      border: 2px solid var(--border-subtle);
      box-shadow: var(--shadow-soft);
    }

    .movie-title {
      font-family: 'Playfair Display', serif;
      font-size: 2.6rem;
      font-weight: 700;
      background: var(--primary-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 0.75rem;
    }

    .meta-row {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
      margin-bottom: 1.5rem;
    }

    .meta-pill {
      background: rgba(139, 92, 246, 0.15);
      color: var(--accent-purple);
      border-radius: 20px;
      padding: 0.5rem 1rem;
      font-size: 0.85rem;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
    }

    .meta-pill.rating {
      background: rgba(251, 191, 36, 0.15);
      color: #fbbf24;
    }

    .section-title {
      font-size: 1.1rem;
      font-weight: 700;
      margin-bottom: 0.75rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .section-card {
      background: rgba(139, 92, 246, 0.05);
      border-radius: 16px;
      padding: 1.25rem;
      border: 1px solid var(--border-subtle);
    }

    .synopsis {
      color: var(--text-secondary);
      line-height: 1.8;
    }

    .chip {
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
      background: var(--card-bg);
      color: var(--text-secondary);
      border: 1px solid var(--border-subtle);
      padding: 0.4rem 0.9rem;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: 500;
      margin: 0 0.5rem 0.5rem 0;
    }

    .detail-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 1rem;
    }

    .detail-grid .label {
      color: var(--text-muted);
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      margin-bottom: 0.4rem;
    }

    .detail-grid .value {
      font-weight: 600;
      color: var(--text-primary);
    }

    .cast-list, .review-list {
      display: grid;
      gap: 0.75rem;
    }

    .cast-card, .review-card {
      background: var(--card-bg);
      border-radius: 12px;
      padding: 0.85rem 1rem;
      border: 1px solid var(--border-subtle);
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .cast-card span, .review-card span {
      color: var(--text-secondary);
    }

    .review-card .score {
      color: #fbbf24;
      font-weight: 700;
    }

    .trailer-links a {
      color: var(--text-primary);
      text-decoration: none;
      font-weight: 600;
    }

    .trailer-links a:hover {
      color: var(--accent-purple);
    }

    .error-panel {
      padding: 3rem;
      text-align: center;
      background: var(--card-bg);
      border-radius: 20px;
      border: 1px solid var(--border-subtle);
    }

    .error-panel h2 {
      font-size: 1.8rem;
      margin-bottom: 0.75rem;
    }

    .error-panel p {
      color: var(--text-secondary);
      margin-bottom: 1.5rem;
    }

    .loading-overlay {
      position: fixed;
      inset: 0;
      background: rgba(10, 10, 26, 0.85);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--text-primary);
      font-size: 1rem;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      z-index: 1000;
      transition: opacity 0.4s ease;
    }

    .loading-overlay.hidden {
      opacity: 0;
      pointer-events: none;
    }

    @media (max-width: 768px) {
      .detail-content {
        padding: 1.75rem;
      }
      .poster-frame {
        margin-top: -120px;
      }
      .movie-title {
        font-size: 2rem;
      }
      .detail-hero {
        height: 320px;
      }
    }
  </style>
</head>
<body>
  <div class="ambient-bg">
    <div class="ambient-orb orb-1"></div>
    <div class="ambient-orb orb-2"></div>
    <div class="ambient-orb orb-3"></div>
  </div>

  <div class="loading-overlay" id="loadingOverlay">Loading</div>

  <%
    const rawPosterPath = movie && movie.poster ? movie.poster : "";
    const normalizedPoster = rawPosterPath.replace(/\\\\/g, "/");
    const uploadsIndex = normalizedPoster.toLowerCase().lastIndexOf("uploads/");
    const trimmedPoster = uploadsIndex >= 0 ? normalizedPoster.slice(uploadsIndex) : normalizedPoster;
    const posterUrl = trimmedPoster
      ? trimmedPoster.startsWith("http")
        ? trimmedPoster
        : trimmedPoster.startsWith("/")
          ? trimmedPoster
          : trimmedPoster.startsWith("uploads/")
            ? `/${trimmedPoster}`
            : `/uploads/${trimmedPoster}`
      : "/assets/images/background/img4.jpg";
    const userRatings = movie && Array.isArray(movie.userRatings) ? movie.userRatings : [];
    const ratingAverage = userRatings.length
      ? userRatings.reduce((sum, entry) => sum + Number(entry.rating || 0), 0) / userRatings.length
      : movie && movie.rating
        ? Number(movie.rating)
        : null;
  %>
  <div class="container">
    <div class="top-bar">
      <a href="/home" class="back-link">
        <i class="bi bi-arrow-left"></i>
        Back to Collection
      </a>
    </div>

    <% if (error) { %>
      <div class="error-panel">
        <h2><%= error %></h2>
        <p>Try returning to the movie list and selecting another title.</p>
        <a href="/home" class="back-link">Browse Movies</a>
      </div>
    <% } else { %>
      <div class="detail-shell">
        <div class="detail-hero" style="background-image: url('<%= posterUrl %>')"></div>
        <div class="detail-content">
          <div class="row g-4">
            <div class="col-lg-3 col-md-4">
              <div class="poster-frame">
                <img src="<%= posterUrl %>" alt="<%= movie ? movie.movieTitle : "Movie poster" %>"
                  onerror="this.src='/assets/images/background/img4.jpg'">
              </div>
            </div>
            <div class="col-lg-9 col-md-8">
              <h1 class="movie-title"><%= movie.movieTitle %></h1>
              <div class="meta-row">
                <span class="meta-pill rating">
                  <i class="bi bi-star-fill"></i>
                  <%= ratingAverage !== null ? ratingAverage.toFixed(1) : "N/A" %>
                </span>
                <span class="meta-pill">
                  <i class="bi bi-calendar3"></i>
                  <%= movie.movieRelease ? new Date(movie.movieRelease).getFullYear() : "N/A" %>
                </span>
                <span class="meta-pill">
                  <i class="bi bi-clock"></i>
                  <%= movie.movieDuration ? movie.movieDuration + " min" : "N/A" %>
                </span>
              </div>
              <div class="mb-3">
                <% if (movie.genre) { %>
                  <% if (Array.isArray(movie.genre)) { %>
                    <% movie.genre.forEach((g) => { %>
                      <span class="chip"><i class="bi bi-tags"></i> <%= g %></span>
                    <% }) %>
                  <% } else { %>
                    <span class="chip"><i class="bi bi-tags"></i> <%= movie.genre %></span>
                  <% } %>
                <% } else { %>
                  <span class="chip"><i class="bi bi-tags"></i> Genre N/A</span>
                <% } %>
              </div>

              <div class="section-title">
                <i class="bi bi-book"></i>
                Synopsis
              </div>
              <div class="section-card synopsis mb-4">
                <%= movie.plotSummary || movie.movieDescription || "Synopsis will be available soon." %>
              </div>

              <div class="section-title">
                <i class="bi bi-sliders"></i>
                Technical Details
              </div>
              <div class="section-card detail-grid mb-4">
                <div>
                  <div class="label">Runtime</div>
                  <div class="value"><%= movie.movieDuration ? movie.movieDuration + " min" : "N/A" %></div>
                </div>
                <div>
                  <div class="label">Release</div>
                  <div class="value"><%= movie.movieRelease ? new Date(movie.movieRelease).toLocaleDateString() : "N/A" %></div>
                </div>
                <div>
                  <div class="label">Genre</div>
                  <div class="value">
                    <%= Array.isArray(movie.genre) ? movie.genre.join(", ") : (movie.genre || "N/A") %>
                  </div>
                </div>
                <div>
                  <div class="label">Average Rating</div>
                  <div class="value"><%= ratingAverage !== null ? ratingAverage.toFixed(1) : "N/A" %></div>
                </div>
              </div>

              <div class="section-title">
                <i class="bi bi-people"></i>
                Cast & Crew
              </div>
              <div class="section-card mb-4">
                <div class="cast-list">
                  <% if (movie.cast && movie.cast.length) { %>
                    <% movie.cast.slice(0, 6).forEach((member) => { %>
                      <div class="cast-card">
                        <strong><%= member.name %></strong>
                        <span><%= member.role || "Cast" %></span>
                      </div>
                    <% }) %>
                  <% } else { %>
                    <div class="cast-card">
                      <strong>Cast details</strong>
                      <span>Not available</span>
                    </div>
                  <% } %>
                  <% if (movie.crew && movie.crew.length) { %>
                    <% movie.crew.slice(0, 4).forEach((member) => { %>
                      <div class="cast-card">
                        <strong><%= member.name %></strong>
                        <span><%= member.role || "Crew" %></span>
                      </div>
                    <% }) %>
                  <% } else { %>
                    <div class="cast-card">
                      <strong>Crew details</strong>
                      <span>Not available</span>
                    </div>
                  <% } %>
                </div>
              </div>

              <div class="section-title">
                <i class="bi bi-play-circle"></i>
                Trailers
              </div>
              <div class="section-card mb-4 trailer-links">
                <% if (movie.trailerLinks && movie.trailerLinks.length) { %>
                  <div class="d-grid gap-2">
                    <% movie.trailerLinks.forEach((link, index) => { %>
                      <a href="<%= link %>" target="_blank" rel="noopener noreferrer">
                        <i class="bi bi-box-arrow-up-right"></i>
                        Trailer <%= index + 1 %>
                      </a>
                    <% }) %>
                  </div>
                <% } else { %>
                  <span class="text-secondary">Trailers will be added soon.</span>
                <% } %>
              </div>

              <div class="section-title">
                <i class="bi bi-chat-dots"></i>
                User Ratings & Reviews
              </div>
              <div class="section-card review-list">
                <% if (movie.reviews && movie.reviews.length) { %>
                  <% movie.reviews.slice(0, 4).forEach((review) => { %>
                    <div class="review-card">
                      <div>
                        <strong><%= review.user || "Anonymous" %></strong>
                        <span class="d-block"><%= review.comment || "No comment provided." %></span>
                      </div>
                      <div class="score"><%= review.rating ? Number(review.rating).toFixed(1) : "N/A" %></div>
                    </div>
                  <% }) %>
                <% } else { %>
                  <div class="review-card">
                    <div>
                      <strong>Be the first reviewer</strong>
                      <span class="d-block">No reviews have been added yet.</span>
                    </div>
                    <div class="score">N/A</div>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <script>
    const overlay = document.getElementById('loadingOverlay')
    window.addEventListener('load', () => {
      overlay.classList.add('hidden')
      setTimeout(() => overlay.remove(), 400)
    })
  </script>
</body>
</html>
